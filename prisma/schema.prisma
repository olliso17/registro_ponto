
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id                String             @id @default(uuid())
  name              String            
  created_at         DateTime           @default(now())
  updated_at        DateTime           @updatedAt
  active            Boolean            @default(true)
  workedHours       EmployeeWorkedHours[]
}

model WorkedHours {
  id                String             @id @default(uuid())
  hours_worked      String             @default("00:00:00")
  employees         EmployeeWorkedHours[]
}

model EmployeeWorkedHours {
  id                String             @id @default(uuid())
  employee_id        String
  worked_hours_id    String
  created_at         DateTime           @default(now())
  employee          Employee           @relation(fields: [employee_id], references: [id])
  workedHours       WorkedHours        @relation(fields: [worked_hours_id], references: [id])

  @@index([employee_id])
  @@index([worked_hours_id])
}
